<div class="container">
    <h1 class="text-center">All My Recipes</h1>
    <div class="row">
        <div class="col-8">
            <div class="row">
                <% @recipes.each do | recipe | %> 
                    <div class="col-12 col-md-6 p-3">
                        <div class="card">
                            <img src="<%=get_image(recipe.id)%>" class="card-img-top" alt="recipe image">
                            <div class="card-body">
                                <h5 class="card-title"><%= recipe.title %></h5>
                                <p class="card-text">
                                    <%= recipe.description %>
                                </p>
                                <p><small class="text-muted">Last updated: <%=recipe.updated_at.to_date%></small></p>
                                <a href="/admin/recipe/<%= recipe.id %>" class="btn btn-block btn-success">View</a>
                                <a href="/admin/recipe/edit/<%= recipe.id %>" class="btn btn-success">Manage</a>
                            </div>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>

        <div class="col-4">
            <h2>Search</h2>
            <div class="row mt-3">
                <input type="text" />
            </div>
            <h2>Quick Add</h2>
            <div class="row mt-3">
                <input type="text" />
            </div>
            <div class="row mt-3">
                <a href="<%=admin_recipe_new_path%>" class="btn btn-success">Add New</a>
            </div>
        </div>
    </div>

</div>