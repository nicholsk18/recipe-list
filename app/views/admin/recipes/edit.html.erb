<div class="container">
    <h1 class="text-center">New Recipe</h1>
    <%= form_with url: "/admin/recipe/edit/#{@recipe.id}" do |form| %>
        
        <div class="recipe-img_container">
            <%= 
                image_tag "/uploads/recipe-#{@recipe.id}.png",
                class: "recipe-img"
            %>
        </div>

        <div class="input-group mb-3">
            <%= 
                form.file_field :picture,
                class: "form-control"
            %>
            <!-- <input type="file" class="form-control" id="recipePic"> -->
            <label class="input-group-text" for="recipePic">Upload</label>
        </div>

        <!-- <input type=file data-direct-upload-url="<%= rails_direct_uploads_url %>" /> -->

        <div class="form-floating mb-3">
            <%= 
                form.text_field :title,
                class: "form-control",
                id: "title",
                value: @recipe.title
            %>

            <%= form.label :title %>
        </div>

        <div class="form-floating mb-3">
            <%= 
                form.text_field :description,
                class: "form-control",
                id: "description",
                value: @recipe.description
            %>
            
            <%= form.label :description %>
        </div>

        <div class="form-floating">
            <%= 
                form.text_area :recipe_body, 
                class: "form-control", 
                placeholder: "Leave a comment here", 
                id: "recipe",
                style: "height: 250px",
                value: @recipe.recipe_body
            %>
            <%= form.label :recipe %>
        </div>

        <div class="d-grid gap-2 mt-3">
            <%= 
                form.submit name: "save", 
                class: "btn btn-block btn-success" 
            %>
        </div>
    <% end %>
</div>